
<div data-controller="turbo-modal modal-form" data-turbo-modal-modal-id-value="turbo-modal" data-turbo-modal-turbo-frame-id-value="turbo-modal">
    <div data-turbo-modal-target="modalContainer">
        <div
            data-action="turbo:submit-end->turbo-modal#submitEnd turbo:submit-start->turbo-modal#submitStart"
            class="modal fade" id="turbo-modal" data-bs-backdrop="static" data-turbo-modal-target="modal" tabindex="-1" aria-labelledby="turbo-modalModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content bg-body card">
                    <div class="modal-header card-header">
                        <h5 class="modal-title text-body text-truncate w-100" id="turbo-modalModalLabel">
                            <%= @post&.id.present? ? "Update Post" : "Create Post" %>
                        </h5>
                        <button type="button" class="btn-close" data-action="turbo-modal#hideModal"></button>
                    </div>
                    <div class="modal-body scroll-sm">
                        <%= form_with model: @post, id: dom_id(@post), html: { class: 'flex-grow-1' }, data: { modal_form_target: "form" } do |f| %>
                            <% if @post.errors.any? %>
                            <div id="error_explanation">
                            <h2>
                                <%= pluralize(@post.errors.count, "error") %> prohibited this post from
                                being saved:
                            </h2>

                            <ul>
                                <% @post.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                                <% end %>
                            </ul>
                            </div>
                            <% end %>
                            <div class="form-group">
                                <%= f.text_area :body, placeholder: 'Enter your thoughts', class: 'form-control', rows: 3 %>
                            </div>

                        <% end %>
                    </div>
                        <div class="modal-footer">
                        <button type="button" class="btn text-primary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" data-turbo-modal-target="button" data-action="modal-form#submitModalForm">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>